#include<iostream>
#include"Header.h"
#include<cstdlib>
#include<ctime>
#include<string>
#include<fstream>
using namespace std;






//--------------------------------------------------------------------------------------------------------------------
//--------------------------------------------------------------------------------------------------------------------
//--------------------------------------------------MAIN / DRIVER-----------------------------------------------------
//--------------------------------------------------------------------------------------------------------------------
//--------------------------------------------------------------------------------------------------------------------
void Menu();



int main()
{
	FileHandling obj;
	obj.Open();
	cout << "\n\n----------------------------------------------------------------------------------------------------\n";
	cout << "----------------------------------------------------------------------------------------------------\n";
	cout << "---------------------------------WELCOME TO VACCINATION SYSTEM--------------------------------------\n";
	cout << "----------------------------------------------------------------------------------------------------\n";
	cout << "----------------------------------------------------------------------------------------------------\n\n";
	GovernmentOfficial Govt_obj;
	Govt_obj.SetAllData(obj);
	SuperAdmin S_A;
	char num;
	cout << "Press 1 to update super admin\nPress 2 to login as super admin\nPress 3 to go to CRUD menu\nPress AnyOther for MainMenu\n";
	cin >> num;
	if (num == '1')
	{
		S_A.Set();
		cout << "Enter 1 if you want to update the information again else you are going to the log in process : \n";
		cin >> num;
		if (num == '1')
		{
			S_A.Set();
			cout << "Enter 1 if you want to go to CRUD , anyother for MainMenu : \n";
			cin >> num;
			if (num == '1')
			{
				S_A.CRUD_Menu();
			}
			else
			{
				Menu();
			}
		}
		else
		{
			Menu();
		}
	}
	else if (num == '2')
	{
		cout << "Sign In as SuperAdmin : \n";
		S_A.SignIn();
		cout << "Enter 1 if you want to go to CRUD : \n";
		cin >> num;
		if (num == '1')
		{
			S_A.CRUD_Menu();
		}
	}
	else if (num == '3')
	{
		S_A.CRUD_Menu();
	}
	else
	{
		Menu();
	}
	obj.Close();
	system("pause");
}



//--------------------------------------------------------------------------------------------------------------------
//--------------------------------------------------------------------------------------------------------------------
//----------------------------------------------------MAIN MENU-------------------------------------------------------
//--------------------------------------------------------------------------------------------------------------------
//--------------------------------------------------------------------------------------------------------------------



void Menu()
{
	char num;
	system("cls");
	cout << "\t\tMain Menu\n\n\tFor Login : \nPress 1 for Admin\nPress 2 for Doctor\nPress 3 for FDO\nPress 4 for GOVT_OFFICIAL\nPress 5 for Citizen\nPress 6 for exit\n";
	cin >> num;
	while (num != '1' && num != '2' && num != '3' && num != '4' && num != '5' && num != '6' && num != '7')
	{
		cout << "Invalid input, Try Again";
		cin >> num;
	}
	if (num == '1')
	{
		Admin admin;
		cout << "To logIn admin press 1\n To add Vaccine Press 2";
		cin >> num;
		while (num != '1' && num != '2')
		{
			cout << "Invalid input, Try Again";
			cin >> num;
		}
		if (num == '1')
		{
			admin.SignIn();
		}
		else if (num == '2')
		{
			admin.Vac();
		}
		cout << "Enter 1 if you again want to go to Menu : \n";
		cin >> num;
		if (num == '1')
		{
			Menu();
		}
	}
	else if (num == '2')
	{
		Doctor doc;
		doc.SignIn();
		Menu();
	}
	else if (num == '3')
	{
		FDO fdo;
		fdo.SignIn();
		fdo.check_Eligibility();
		Menu();
	}
	else if (num == '4')
	{
		GovernmentOfficial G_O;
		G_O.SignIn();
		cout << "Press 1 to see Graph\nPress 2 to see DATA : ";
		cin >> num;
		while (num != '1' && num != '2')
		{
			cout << "Invalid input, Try Again";
			cin >> num;
		}
		if (num == '1')
		{
			G_O.DisplayGraph();
		}
		else if (num == '2')
		{
			G_O.CalculateData();
		}
	}
	else if (num == '5')
	{
		Citizen C_obj;
		C_obj.SignIn();
		/*FDO FDO_obj;
		MD_Doctor MD_obj;
		Doctor D_obj;
		cout << "Sign In Citizen : \n";
		if (C_obj.Sign_In() == true)
		{
			FDO_obj.Setter();
			MD_obj.SetData();
			if (FDO_obj.check_Eligibility() == true)
			{
				D_obj.Set();
				D_obj.Vaccinate();
			}
		}*/
	}
	else if (num == '6')
	{
		exit;
	}
}
