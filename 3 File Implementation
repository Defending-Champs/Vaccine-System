	vaccinesTypes << "Vac Type : " << obj.vacType << "\nVac Name : " << obj.vacName << "\nVac id : " << obj.vacID << "\nNumber of Doses : " << obj.numberOfDoses << "\nPrice : " << obj.price << "\nBatch ID : " << obj.batchID << "\nVacBatchID : " << obj.batchVacID << endl;
}



